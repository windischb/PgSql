<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netcoreapp2.0;net461</TargetFrameworks>
    <RootNamespace>doob.PgSql</RootNamespace>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>


  <PropertyGroup>
    <LangVersion>7.2</LangVersion>
    <PackageId>doob.PgSql</PackageId>
    <Authors>Bernhard Windisch</Authors>
    <Company>-</Company>
    <RepositoryUrl>https://github.com/windischb/PgSql</RepositoryUrl>
    <PackageProjectUrl>https://github.com/windischb/PgSql</PackageProjectUrl>
    <Version>2.1.4</Version>
  </PropertyGroup>


  <ItemGroup>
    <PackageReference Include="LibLog" Version="5.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2">
    </PackageReference>
    <PackageReference Include="Npgsql" Version="[3.2.5]">
    </PackageReference>
    <PackageReference Include="Remotion.Linq" Version="2.2.0" />
    <PackageReference Include="System.Reactive.Linq" Version="4.0.0">
    </PackageReference>
  </ItemGroup>

</Project>
